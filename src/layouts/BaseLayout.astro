---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ImageViewer from '../components/ImageViewer.astro';
import ThemeToggleMobile from '../components/ThemeToggleMobile.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Portfolio of a senior product designer focused on AI and blockchain innovation.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>{title}</title>
    <script is:inline>
      // Apply theme immediately to prevent flash
      (function() {
        const getTheme = () => {
          const stored = localStorage.getItem('theme');
          if (stored) return stored;
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        };
        const theme = getTheme();
        document.documentElement.setAttribute('data-theme', theme);
        if (theme === 'dark') {
          document.documentElement.classList.add('dark-theme');
        }
      })();
    </script>
    <ViewTransitions />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
    <ImageViewer />
    <ThemeToggleMobile />
    <script src="../scripts/imageViewer.ts"></script>
  </body>
</html>

<style is:global>
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
    padding-top: var(--space-8);
    padding-bottom: var(--space-8);
  }
</style>
