---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroImage from '../../components/HeroImage.astro';
import ContentNav from '../../components/ContentNav.astro';

export async function getStaticPaths() {
  const posts = await getCollection('writing');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get all posts and sort them
const allPosts = await getCollection('writing');

// Sort posts: items with sortOrder first (ascending), then by date (descending)
const sortedPosts = allPosts.sort((a, b) => {
  const aHasSort = a.data.sortOrder !== undefined;
  const bHasSort = b.data.sortOrder !== undefined;

  // Both have sortOrder - compare sortOrder
  if (aHasSort && bHasSort) {
    return a.data.sortOrder! - b.data.sortOrder!;
  }

  // Only a has sortOrder - a comes first
  if (aHasSort) return -1;

  // Only b has sortOrder - b comes first
  if (bHasSort) return 1;

  // Neither has sortOrder - compare by date (descending)
  return b.data.date.getTime() - a.data.date.getTime();
});

// Find current post index and get next post (with loop)
const currentIndex = sortedPosts.findIndex(p => p.slug === post.slug);
const nextIndex = (currentIndex + 1) % sortedPosts.length;
const nextPost = sortedPosts[nextIndex];
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="writing-article">
    <header class="article-hero">
      <div class="container">
        <nav class="back-link">
          <a href="/writing">‚Üê Back to Writing</a>
        </nav>
        <div class="hero-content">
          <h1>{post.data.title}</h1>
          <div class="meta">
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
            {post.data.tags.length > 0 && (
              <ul class="tags">
                {post.data.tags.map((tag) => (
                  <li class="tag">{tag}</li>
                ))}
              </ul>
            )}
          </div>
        </div>
      </div>
    </header>

    {post.data.coverImage && (
      <div class="hero-image-container">
        <HeroImage
          src={post.data.coverImage}
          alt={post.data.title}
        />
      </div>
    )}

    <div class="article-content">
      <div class="container">
        <div class="prose">
          <Content />
        </div>
        <ContentNav
          href={`/writing/${nextPost.slug}`}
          title={nextPost.data.title}
          coverImage={nextPost.data.coverImage}
        />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .article-hero {
    margin-bottom: var(--space-8);
  }

  .hero-image-container {
    margin-bottom: var(--space-12);
  }

  .back-link {
    margin-bottom: var(--space-6);
  }

  .back-link a {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .back-link a:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .article-hero h1 {
    margin-bottom: var(--space-4);
  }

  .meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    flex-wrap: wrap;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .tags {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .tag {
    background-color: var(--color-surface-hover);
    padding: var(--space-1) var(--space-2);
    border-radius: 4px;
    font-size: var(--text-xs);
  }

  .article-content {
    margin-bottom: var(--space-12);
  }
</style>
