---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import CaseStudyCard from '../components/CaseStudyCard.astro';
import ResponsiveImage from '../components/ResponsiveImage.astro';

const allCaseStudies = await getCollection('case-studies');
const featuredCaseStudies = allCaseStudies
  .filter((caseStudy) => caseStudy.data.featured === true)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 4);

const allWriting = await getCollection('writing');
const recentWriting = allWriting
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
---

<BaseLayout title="Home">
  <div class="container">
    <section class="hero">
      <h1>Senior Product Designer</h1>
      <p class="hero-intro">
        Crafting thoughtful digital experiences at the intersection of AI and blockchain innovation. Focused on making complex technologies accessible and meaningful.
      </p>
      <a href="/files/resume.pdf" class="resume-button" download>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path d="M10 13L6 9H8V4H12V9H14L10 13Z" fill="currentColor"/>
          <path d="M4 16H16V14H4V16Z" fill="currentColor"/>
        </svg>
        Download Resume
      </a>
    </section>

    <section class="featured-work">
      <h2>Selected Work</h2>
      {featuredCaseStudies.length === 0 ? (
        <p class="placeholder-text">Case studies coming soon.</p>
      ) : (
        <>
          <div class="case-studies-grid">
            {featuredCaseStudies.map((caseStudy) => (
              <CaseStudyCard
                title={caseStudy.data.title}
                description={caseStudy.data.description}
                slug={caseStudy.slug}
                date={caseStudy.data.date}
                confidentiality={caseStudy.data.confidentiality}
                tags={caseStudy.data.tags}
                coverImage={caseStudy.data.coverImage}
              />
            ))}
          </div>
          <div class="view-all">
            <a href="/work" class="view-all-link">View all work →</a>
          </div>
        </>
      )}
    </section>

    <section class="recent-writing">
      <h2>Recent Writing</h2>
      {recentWriting.length === 0 ? (
        <p class="placeholder-text">Writing coming soon.</p>
      ) : (
        <>
          <div class="writing-grid">
            {recentWriting.map((post) => (
              <article class="writing-card">
                <a href={`/writing/${post.slug}`} class="card-link">
                  <div class="card-content">
                    {post.data.coverImage && (
                      <div class="card-image">
                        <img
                          src={post.data.coverImage}
                          alt={post.data.title}
                          loading="lazy"
                          class="cover-image"
                        />
                      </div>
                    )}
                    <h3>{post.data.title}</h3>
                    <p class="description">{post.data.description}</p>
                    <div class="card-footer">
                      <time datetime={post.data.date.toISOString()}>
                        {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                      </time>
                      {post.data.tags && post.data.tags.length > 0 && (
                        <ul class="tags">
                          {post.data.tags.map((tag) => (
                            <li class="tag">{tag}</li>
                          ))}
                        </ul>
                      )}
                    </div>
                  </div>
                </a>
              </article>
            ))}
          </div>
          <div class="view-all">
            <a href="/writing" class="view-all-link">View all writing →</a>
          </div>
        </>
      )}
    </section>
  </div>
</BaseLayout>

<style>
  .hero {
    padding-block: var(--space-16);
  }

  .hero h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-6);
  }

  .hero-intro {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    max-width: var(--max-width-content);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-8);
  }

  .resume-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background-color: rgba(61, 90, 128, 0.12);
    color: var(--color-accent);
    text-decoration: none;
    border-radius: 9999px;
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    transition: all var(--transition-fast);
    position: relative;
    overflow: hidden;
  }

  .resume-button:hover {
    background-color: rgba(61, 90, 128, 0.18);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(61, 90, 128, 0.15);
  }

  .resume-button:active {
    transform: translateY(0);
  }

  .resume-button svg {
    flex-shrink: 0;
  }

  .featured-work {
    padding-block: var(--space-16);
  }

  .featured-work h2 {
    margin-bottom: var(--space-8);
  }

  .placeholder-text {
    color: var(--color-text-muted);
    font-style: italic;
  }

  .case-studies-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 768px) {
    .case-studies-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .view-all {
    text-align: center;
  }

  .view-all-link {
    display: inline-block;
    font-size: var(--text-lg);
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .view-all-link:hover {
    color: var(--color-text);
    text-decoration: underline;
  }

  .recent-writing {
    padding-block: var(--space-16);
  }

  .recent-writing h2 {
    margin-bottom: var(--space-8);
  }

  .writing-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 768px) {
    .writing-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .writing-card {
    height: 100%;
  }

  .writing-card .card-link {
    display: block;
    height: 100%;
    text-decoration: none;
    color: inherit;
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: var(--space-6);
    transition: all var(--transition-base);
  }

  .writing-card .card-link:hover {
    border-color: var(--color-accent);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .writing-card .card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .writing-card .card-image {
    margin-bottom: var(--space-4);
    overflow: hidden;
    border-radius: 6px;
    aspect-ratio: 4 / 3;
    background-color: var(--color-surface-hover);
  }

  .writing-card .card-image :global(.cover-image) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .writing-card h3 {
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-3);
    color: var(--color-text);
  }

  .writing-card .description {
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
    flex-grow: 1;
  }

  .writing-card .card-footer {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
    margin-top: auto;
  }

  .writing-card .card-footer time {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .writing-card .tags {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .writing-card .tag {
    background-color: var(--color-surface-hover);
    padding: var(--space-1) var(--space-2);
    border-radius: 4px;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .writing-card .card-link {
      padding: var(--space-4);
    }

    .writing-card h3 {
      font-size: var(--text-xl);
    }
  }
</style>
