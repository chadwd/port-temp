---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import CaseStudyCard from '../components/CaseStudyCard.astro';

const allCaseStudies = await getCollection('case-studies');
const featuredCaseStudies = allCaseStudies
  .filter((caseStudy) => caseStudy.data.featured === true)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 4);
---

<BaseLayout title="Home">
  <div class="container">
    <section class="hero">
      <h1>Senior Product Designer</h1>
      <p class="hero-intro">
        Crafting thoughtful digital experiences at the intersection of AI and blockchain innovation. Focused on making complex technologies accessible and meaningful.
      </p>
    </section>

    <section class="featured-work">
      <h2>Selected Work</h2>
      {featuredCaseStudies.length === 0 ? (
        <p class="placeholder-text">Case studies coming soon.</p>
      ) : (
        <>
          <div class="case-studies-grid">
            {featuredCaseStudies.map((caseStudy) => (
              <CaseStudyCard
                title={caseStudy.data.title}
                description={caseStudy.data.description}
                slug={caseStudy.slug}
                date={caseStudy.data.date}
                confidentiality={caseStudy.data.confidentiality}
                tags={caseStudy.data.tags}
              />
            ))}
          </div>
          <div class="view-all">
            <a href="/work" class="view-all-link">View all work â†’</a>
          </div>
        </>
      )}
    </section>
  </div>
</BaseLayout>

<style>
  .hero {
    padding-block: var(--space-24);
  }

  .hero h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-6);
  }

  .hero-intro {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    max-width: var(--max-width-content);
    line-height: var(--leading-relaxed);
  }

  .featured-work {
    padding-block: var(--space-16);
  }

  .featured-work h2 {
    margin-bottom: var(--space-8);
  }

  .placeholder-text {
    color: var(--color-text-muted);
    font-style: italic;
  }

  .case-studies-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  @media (min-width: 768px) {
    .case-studies-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .view-all {
    text-align: center;
  }

  .view-all-link {
    display: inline-block;
    font-size: var(--text-lg);
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .view-all-link:hover {
    color: var(--color-text);
    text-decoration: underline;
  }
</style>
