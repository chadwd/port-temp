---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact"
  description="Get in touch to discuss projects, collaborations, or opportunities."
>
  <div class="container">
    <header class="contact-header">
      <div class="hero-banner">
        <img src="/images/contact-postal.jpg" alt="Contact Vingate Letter" class="hero-banner-image" />
        <div class="hero-banner-overlay">
          <h1>Get in Touch</h1>
          <p class="tagline">Let's build something that scales.</p>
        </div>
      </div>
    </header>

    <div class="contact-content">
      <div class="contact-method">
        <p>Email me at:</p>
        <a href="mailto:chad.dunbar@gmail.com" class="email-link">chad.dunbar@gmail.com</a>
      </div>

      <div class="social-links">
        <p>Or connect on:</p>
        <ul>
          <li><a href="https://www.linkedin.com/in/chad-dunbar/" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
          <li><a href="https://github.com/chadwd" target="_blank" rel="noopener noreferrer">GitHub</a></li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .contact-header {
    margin-bottom: var(--space-12);
  }

  .hero-banner {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    min-height: 280px;
  }

  .hero-banner-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner-overlay {
    position: relative;
    z-index: 1;
    padding: var(--space-8);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    min-height: 280px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.3) 50%, rgba(0, 0, 0, 0.1) 100%);
  }

  .hero-banner-overlay h1 {
    color: white;
    margin-bottom: var(--space-2);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .tagline {
    color: rgba(255, 255, 255, 0.8);
    font-size: var(--text-lg);
    margin: 0;
  }

  .contact-content {
    max-width: var(--max-width-content);
  }

  .contact-method {
    margin-bottom: var(--space-12);
  }

  .contact-method p {
    margin-bottom: var(--space-3);
    color: var(--color-text-muted);
  }

  .email-link {
    font-size: var(--text-2xl);
    font-weight: var(--font-medium);
    color: var(--color-text);
    text-decoration: none;
    display: inline-block;
    border-bottom: 2px solid var(--color-accent);
    transition: all var(--transition-fast);
  }

  .email-link:hover {
    color: var(--color-accent);
    border-bottom-color: var(--color-text);
  }

  .social-links p {
    margin-bottom: var(--space-3);
    color: var(--color-text-muted);
  }

  .social-links ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: var(--space-6);
  }

  .social-links a {
    font-size: var(--text-lg);
  }
</style>
