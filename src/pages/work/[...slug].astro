---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeroImage from '../../components/HeroImage.astro';
import ContentNav from '../../components/ContentNav.astro';

export async function getStaticPaths() {
  const caseStudies = await getCollection('case-studies');
  return caseStudies.map((caseStudy) => ({
    params: { slug: caseStudy.slug },
    props: { caseStudy },
  }));
}

const { caseStudy } = Astro.props;
const { Content } = await caseStudy.render();

// Get all case studies and sort them
const allCaseStudies = await getCollection('case-studies');

// Sort case studies: items with sortOrder first (ascending), then by date (descending)
const sortedCaseStudies = allCaseStudies.sort((a, b) => {
  const aHasSort = a.data.sortOrder !== undefined;
  const bHasSort = b.data.sortOrder !== undefined;

  // Both have sortOrder - compare sortOrder
  if (aHasSort && bHasSort) {
    return a.data.sortOrder! - b.data.sortOrder!;
  }

  // Only a has sortOrder - a comes first
  if (aHasSort) return -1;

  // Only b has sortOrder - b comes first
  if (bHasSort) return 1;

  // Neither has sortOrder - compare by date (descending)
  return b.data.date.getTime() - a.data.date.getTime();
});

// Find current case study index and get next (with loop)
const currentIndex = sortedCaseStudies.findIndex(cs => cs.slug === caseStudy.slug);
const nextIndex = (currentIndex + 1) % sortedCaseStudies.length;
const nextCaseStudy = sortedCaseStudies[nextIndex];
---

<BaseLayout title={caseStudy.data.title} description={caseStudy.data.description}>
  <article class="case-study">
    <header class="case-study-hero">
      <div class="container">
        <nav class="breadcrumb-nav">
          <a href="/work" class="back-link">← Back to Work</a>
          <a href={`/work/${nextCaseStudy.slug}`} class="next-link">Next →</a>
        </nav>
        <div class="hero-content">
          <div class="title-row">
            <h1>{caseStudy.data.title}</h1>
            {caseStudy.data.confidentiality !== 'public' && (
              <span class={`badge badge-${caseStudy.data.confidentiality}`}>
                {caseStudy.data.confidentiality === 'partial' ? 'Limited Detail' : 'NDA Protected'}
              </span>
            )}
          </div>
          <div class="meta">
            <time datetime={caseStudy.data.date.toISOString()}>
              {caseStudy.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
            {caseStudy.data.tags.length > 0 && (
              <ul class="tags">
                {caseStudy.data.tags.map((tag) => (
                  <li class="tag">{tag}</li>
                ))}
              </ul>
            )}
          </div>
        </div>
      </div>
    </header>

    <div class="case-study-content">
      <div class="container">
        <div class="prose">
          <Content />
        </div>
        <ContentNav
          href={`/work/${nextCaseStudy.slug}`}
          title={nextCaseStudy.data.title}
          coverImage={nextCaseStudy.data.coverImage}
        />
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .case-study-hero {
    margin-bottom: var(--space-8);
  }

  .hero-image-container {
    margin-bottom: var(--space-12);
  }

  .breadcrumb-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-6);
  }

  .back-link,
  .next-link {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
  }

  .back-link:hover,
  .next-link:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }

  .title-row {
    display: flex;
    align-items: baseline;
    gap: var(--space-3);
    flex-wrap: wrap;
    margin-bottom: var(--space-4);
  }

  .case-study-hero h1 {
    margin-bottom: 0;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    flex-wrap: wrap;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .tags {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .tag {
    background-color: var(--color-surface-hover);
    padding: var(--space-1) var(--space-2);
    border-radius: 4px;
    font-size: var(--text-xs);
  }

  .badge {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    padding: var(--space-1) var(--space-2);
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .badge-partial {
    background-color: var(--color-surface-hover);
    color: var(--color-text-muted);
  }

  .badge-nda {
    background-color: var(--color-surface-hover);
    color: var(--color-text);
  }

  .case-study-content {
    margin-bottom: var(--space-12);
  }
</style>
