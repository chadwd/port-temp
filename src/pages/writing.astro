---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Writing"
  description="Essays and thoughts on product design, AI, blockchain, and building meaningful digital experiences."
>
  <div class="container">
    <div class="prose">
      <h1>Writing</h1>
      <p class="intro">
        Essays and thoughts on design, technology, and building products. Coming soon.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .prose {
    padding-block: var(--space-12);
  }

  .intro {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
  }
</style>
