---
/**
 * ResponsiveImage - General purpose responsive image component
 *
 * Wraps Astro's built-in Image component with responsive defaults.
 * Uses automatic srcset/sizes generation and lazy loading by default.
 *
 * @example
 * import coverImage from '../content/case-studies/images/sample.jpg';
 * <ResponsiveImage src={coverImage} alt="Project cover" />
 */
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  loading?: 'eager' | 'lazy';
  class?: string;
}

const { src, alt, loading = 'lazy', class: className } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  loading={loading}
  class={className}
  widths={[400, 800, 1200]}
  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 80vw, 1200px"
/>
