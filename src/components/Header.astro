---
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/work', label: 'Work' },
  { href: '/writing', label: 'Writing' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header class="header">
  <div class="container header-inner">
    <a href="/" class="site-name" aria-label="Chad Dunbar - Home">
      <svg class="logo" viewBox="0 0 734 432" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path fill="currentColor" d="M342 .154v78.142s-104.021 0-105 .03c-14.944.476-136.5 24.372-136.5 134.027 0 109.655 128.462 131.098 137.5 131.061.5-.005 104-.005 104-.005v78.534s-103.833.038-104 .057c-112.5 0-220-93.279-220-209.647C18 96.705 127.5.153 236 0c.834.045 106 .154 106 .154Z"/>
        <path fill="currentColor" d="M715.941 217C713.128 331.194 606.998 422 496 422c-.173-.019-16-.057-16-.057v-78.534s15.498 0 16 .005c8.908.036 133.852-20.797 137.421-126.414h82.52ZM498 0c106.192.15 213.341 92.641 217.852 205h-82.539C628.023 101.623 511.604 78.79 497 78.326c-.98-.031-17-.03-17-.03V.154s17.166-.11 18-.154Z"/>
        <path fill="currentColor" d="M380 0v422h78V0h-78Z"/>
        <path fill="currentColor" d="M716.423 422H588c57.344-23.827 103.297-66.289 128.423-118.832V422Z"/>
      </svg>
    </a>
    <div class="nav-wrapper">
      <nav class="nav" aria-label="Main navigation">
        <ul class="nav-list">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class:list={['nav-link', { active: isActive(link.href) }]}
                aria-current={isActive(link.href) ? 'page' : undefined}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: rgba(var(--color-bg-rgb), 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--color-border);
  }

  .header-inner {
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    padding-block: var(--space-4);
    min-height: 60px;
  }

  .site-name {
    color: var(--color-text);
    text-decoration: none;
    padding-inline: var(--space-3);
    display: flex;
    align-items: center;
    border-radius: 4px;
  }

  .site-name:hover {
    color: var(--color-accent);
  }

  .site-name:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
  }

  .logo {
    height: 24px;
    width: auto;
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    gap: var(--space-6);
  }

  .nav-list {
    display: flex;
    gap: var(--space-6);
    list-style: none;
    margin: 0;
    padding: 0;
    height: 100%;
  }

  .nav-list li {
    display: flex;
    align-items: stretch;
  }

  .nav-link {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
    padding-inline: var(--space-3);
    display: flex;
    align-items: center;
    border-radius: 4px;
    position: relative;
    overflow: hidden;
  }

  .nav-link:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .nav-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
  }

  .nav-link.active {
    color: var(--color-text);
    font-weight: var(--font-medium);
  }

  /* Mobile: stack nav below site name, hide theme toggle (use FAB instead) */
  @media (max-width: 768px) {
    .header-inner {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-3);
      padding-block: var(--space-4);
    }

    .nav-wrapper {
      width: 100%;
      justify-content: flex-start;
    }

    .nav-list {
      gap: var(--space-5);
      flex-wrap: wrap;
    }

    /* Hide desktop theme toggle on mobile (use FAB instead) */
    .nav-wrapper :global(.theme-toggle) {
      display: none;
    }
  }
</style>
