---
/**
 * HeroImage - Hero/cover images
 *
 * Simple img tag for images from /public directory
 *
 * @example
 * <HeroImage src="/images/case-studies/my-project/hero.png" alt="Project hero" />
 */
interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;
---

<img
  src={src}
  alt={alt}
  loading="eager"
  decoding="async"
  class={className}
/>
